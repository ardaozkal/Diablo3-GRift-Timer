<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="MainWindow" Height="35" Width="175" Topmost="True" WindowStyle="None">
    <Grid MouseLeftButtonUp="textBlock_MouseLeftButtonUp">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="click to start" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" MouseLeftButtonUp="textBlock_MouseLeftButtonUp"/>

    </Grid>
</Window>
